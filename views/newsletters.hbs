<body id="home" >
    <main id="newsletters-page" class="main-grid">
        <section id="newsletters-link-listing">
            <h1><span>//</span> Newsletters</h1>

            <article class="global-article-link newsletter-download-link" style="visibility: hidden;" height="0">
            </article>

            {{#each newsletter_list}}
            <article class="global-article-link newsletter-download-link">
                <a class="source-link newsletter" href="{{this.pdf.filename}}" target="_blank"><h3>{{this.title}}<p>{{this.date}}</p></h3><img class="newsletter-image-preview" src="{{this.preview_image.filename}}"></a>
                <a href="{{this.pdf.filename}}" class="icon-link" download><img class="download-link" src="../public/assets/global/download-link.svg"></a>
                <a class="icon-link resource-share" target="_blank"><img class="share-icon" src="../public/assets/global/share-icon.svg"></a>
                <div class="share-modal invisi">
                    <h4>Share</h4>
                    <div class="share-links">
                        <a class="share-modal-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{this.pdf.filename}}" target="_blank">
